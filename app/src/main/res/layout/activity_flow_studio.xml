<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- The FlowStudio-->
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/hscroll"
            xmlns:android="http://schemas.android.com/apk/res/android"
            >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/vscroll" >

            <RelativeLayout
            android:id="@+id/parent_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >


        </RelativeLayout>

        </ScrollView>
        </HorizontalScrollView>
    </FrameLayout>

    <!-- The navigation drawer -->


    <LinearLayout android:id="@+id/left_drawer"
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:background="#f7f7f7"
        android:orientation="vertical"
        >

        <TextView
            android:text="Flow Code"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:padding="3dp"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/side_title"
            android:gravity="center_horizontal" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/left_scroll"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/menu_parent"
            >

        <Button
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:id="@+id/side_start"
            android:background="@mipmap/start"
            android:layout_gravity ="center_horizontal"
            android:layout_marginTop="10dp"
            />

        <Button
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:id="@+id/side_end"
            android:background="@mipmap/end"
            android:layout_gravity ="center_horizontal"
            android:layout_marginTop="10dp"
            />

        <Button
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:id="@+id/side_ready"
            android:background="@mipmap/ready"
            android:layout_gravity ="center_horizontal"
            android:layout_marginTop="10dp"
            />

        <Button
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:id="@+id/side_cheory"
            android:background="@mipmap/cheory"
            android:layout_gravity ="center_horizontal"
            android:layout_marginTop="10dp"
            />

        <Button
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:id="@+id/side_input"
            android:background="@mipmap/input"
            android:layout_gravity ="center_horizontal"
            android:layout_marginTop="10dp"
            />

        <Button
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:id="@+id/side_output"
            android:background="@mipmap/output"
            android:layout_gravity ="center_horizontal"
            android:layout_marginTop="10dp"
            />

        <Button
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:id="@+id/side_condition"
            android:background="@mipmap/condition"
            android:layout_gravity ="center_horizontal"
            android:layout_marginTop="10dp"
            />

        <Button
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:id="@+id/side_repeat"
            android:background="@mipmap/repeat"
            android:layout_gravity ="center_horizontal"
            android:layout_marginTop="10dp"
            />

        <Button
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:id="@+id/side_func_start"
            android:background="@mipmap/func_start"
            android:layout_gravity ="center_horizontal"
            android:layout_marginTop="10dp"
            />

        <Button
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:id="@+id/side_func_end"
            android:background="@mipmap/func_end"
            android:layout_gravity ="center_horizontal"
            android:layout_marginTop="10dp"
            />

        <Button
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:id="@+id/side_func_use"
            android:background="@mipmap/func_use"
            android:layout_gravity ="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />

        </LinearLayout>
        </ScrollView>
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>